# Copy to .env and fill these in
# PowerShell: set env vars for the current session (no quotes):
# $env:SUPABASE_URL = "https://YOUR-PROJECT.supabase.co"; $env:SUPABASE_SERVICE_ROLE = "..."; $env:MQTT_URL = "wss://broker.hivemq.com:8884/mqtt"

SUPABASE_URL=
SUPABASE_SERVICE_ROLE=
SUPABASE_SCHEMA=public
SUPABASE_TABLE=telemetry

# MQTT broker over WebSocket or TCP
MQTT_URL=wss://broker.hivemq.com:8884/mqtt
MQTT_USERNAME=
MQTT_PASSWORD=

# MQTT topics to subscribe (comma separated)
MQTT_TOPICS=home/dashboard/data,home/dashboard/window,home/dashboard/threshold,home/dashboard/vent,home/dashboard/auto

# Optional two-table mode (leave blank to use single telemetry table)
SUPABASE_READINGS=readings
SUPABASE_SETTINGS=settings
SETTINGS_CHANGE_DETECTION=true

# Optional: Automated daily cleanup (handled by the Node bridge)
# Enable cleanup: 'true' or 'false'
CLEANUP_ENABLED=false
# Mode: 'purge' (delete older than CLEANUP_PURGE_DAYS) or 'truncate' (empty table daily via RPC)
CLEANUP_MODE=purge
# Keep last N days when purge mode is used
CLEANUP_PURGE_DAYS=1
# Time of day to run (HH:mm, server local time of the bridge)
CLEANUP_TIME=00:00
# Optional offset in minutes to shift schedule (e.g., set to your timezone difference from server)
CLEANUP_TZ_OFFSET_MINUTES=0
